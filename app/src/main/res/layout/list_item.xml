<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:padding="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageOfWord"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/tan_background"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spanishWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageOfWord"
        app:layout_constraintTop_toTopOf="@+id/imageOfWord" />

    <TextView
        android:id="@+id/translateWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/spanishWord"
        app:layout_constraintTop_toBottomOf="@+id/spanishWord" />
</androidx.constraintlayout.widget.ConstraintLayout>